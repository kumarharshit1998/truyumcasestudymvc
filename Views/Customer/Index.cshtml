@model IEnumerable<truYum.Models.MenuItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<table class="table">
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FreeDelivery)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayName("Name")
        </th>
        
        <th>@Html.DisplayName("Action")</th>
    </tr>

@foreach (var item in Model) {
<tr>

    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FreeDelivery)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Price)
    </td>
    @{ foreach (var x in ViewBag.Clist)
        {

            if (item.CategoryId == x.Id)
            {
                <td>
                    <p>@x.Name</p>
                </td>
            }
        }
    }
    <td>
        @Html.ActionLink("Add to Cart", "Cart", new { id = item.MenuId }) 

    </td>
</tr>
}

</table>
